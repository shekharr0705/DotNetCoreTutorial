@model Restaurant

@{
    ViewBag.Title = Model.Name;
}

<section class="card" style="margin-bottom:5px;margin-top:10px">
    <div class="card-body">
        <h2 class="card-title">@Model.Name</h2>
        <div class="card-subtitle mb-2 text-muted">
            <h3> Id: @Model.Id</h3>
            <h3>Cousine: <b>@Model.Cuisine</b></h3>
        </div>
        <div class="card-link">
            <div><a asp-controller="Home" asp-action="Index">Home</a></div>
        </div>
    </div>
</section>
