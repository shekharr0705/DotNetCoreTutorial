@page
@using OdeToFood.Pages.Restaurants
@model EditModel
@{
    ViewBag.Title = "Edit:" + Model.Restaurant.Name;
}
<link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <h1> Edit @Model.Restaurant.Name</h1>
    <form method="post" style="margin-top:10px">
        <input asp-for="Restaurant.Id" type="hidden" />
        <div class="form-group row">
            <label asp-for="Restaurant.Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Restaurant.Name" class="form-control" />
                <span asp-validation-for="Restaurant.Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Restaurant.Cuisine" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Restaurant.Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()" class="form-control"></select>
            </div>
            <span asp-validation-for="Restaurant.Cuisine"></span>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="submit" value="Save" name="Save" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
